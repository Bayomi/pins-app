<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical" >


  <CheckBox android:id="@+id/cb_event"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#event"/>
  <CheckBox android:id="@+id/cb_study"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#study"/>
  <CheckBox android:id="@+id/cb_warning"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#warning"/>
  <CheckBox android:id="@+id/cb_sport"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#sport"/>
  <CheckBox android:id="@+id/cb_party"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#party"/>
  <CheckBox android:id="@+id/cb_random"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#random"/>

</LinearLayout>